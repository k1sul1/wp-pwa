.application {
  min-height: 100%

  &__header {
  }

  &__wrapper {
    display: flex
    flex-flow: row nowrap
    align-items: flex-start
    background: #222
    color: #f1f1f1
    animation-duration: 0.3s

    &.has-sidebar {
      // > main {
        // flex-basis: 65%
      // }

      // > aside {
        // flex-basis: 35%
        // flex-shrink: 0
      // }
    }

    &.no-sidebar {
      // > main {
        // flex-basis: 90%
      // }
    }

    &.sidebar-open {
      > main {
        // flex-basis: 65%
        width: 65%

        @media (max-width: 768px) {
          width: 10%
        }
      }

      aside {
        width: 35%

        @media (max-width: 768px) {
          width: 90%
        }
      }
    }

    &.sidebar-closed {
      main {
        // flex-basis: 90%
        width: 90%
      }

      aside {
        white-space: nowrap
        overflow: hidden
        width: 10%
      }
    }

    > main {
      background: #f1f1f1
      color: #222
      min-height: 100vh

      padding-top: r(20px)
      padding-bottom: @padding-top
      overflow: hidden
      transition: 0.3s

      > *:not(.fancy-header) {
        padding-left: @padding-top
        padding-right: @padding-top
      }
    }

    > aside {
      padding: r(20px)
      min-height: 100vh
      transition: 0.3s
    }
  }
}

.offline-notice,
.admin-bar {
  position: fixed
  z-index: 99999
  top: r(20px)
  left: r(20px)
  padding: r(7px)
  display: inline-block
  font-size: r(20px)
  text-transform: uppercase
  font-weight: 700
  color: #fff
  background: darken(#222, 15%)
}

.admin-bar {
  top: initial
  left: 0
  bottom: 0
  right: 0

  a {
    color: inherit
  }
}
