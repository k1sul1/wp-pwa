.application {
  min-height: 100%

  &__header {
  }

  &__wrapper {
    display: flex
    flex-flow: row nowrap
    align-items: flex-start
    background: colors.darkgrey
    color: colors.white
    animation-duration: 0.3s

    &.has-sidebar {
      // > main {
        // flex-basis: 65%
      // }

      // > aside {
        // flex-basis: 35%
        // flex-shrink: 0
      // }
    }

    &.no-sidebar {
      // > main {
        // flex-basis: 90%
      // }
    }

    &.sidebar-open {
      > main {
        // flex-basis: 65%
        width: 65%

        @media (max-width: 768px) {
          width: 10%
        }
      }

      aside {
        width: 35%

        @media (max-width: 768px) {
          width: 90%
        }
      }
    }

    &.sidebar-closed {
      main {
        // flex-basis: 90%
        width: 90%
      }

      aside {
        white-space: nowrap
        overflow: hidden
        width: 10%
      }
    }

    > main {
      background: colors.white
      color: colors.darkgrey
      min-height: 100vh

      padding-top: r(20px)
      padding-bottom: @padding-top
      overflow: hidden
      transition: 0.3s

      > *:not(.fancy-header) {
        padding-left: @padding-top
        padding-right: @padding-top
      }

      > pre {
        // error display
        border-radius: 0 !important
        margin-top: r(20px) !important
        margin-bottom: r(-20px) !important
      }
    }

    > aside {
      padding: r(20px)
      min-height: 100vh
      transition: 0.3s
    }
  }
}

