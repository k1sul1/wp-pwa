.offline-notice,
.admin-bar {
  position: fixed
  z-index: 99999
  top: r(20px)
  left: r(20px)
  padding: r(7px)
  display: inline-block
  font-size: r(20px)
  text-transform: uppercase
  font-weight: 700
  color: colors.beige
  background: colors.grey
}

.admin-bar {
  top: initial
  left: 0
  bottom: 0
  right: 0

  a {
    color: inherit
    text-decoration: none

    &:hover, &:focus, &:active {
      opacity: 0.8
    }
  }
}
