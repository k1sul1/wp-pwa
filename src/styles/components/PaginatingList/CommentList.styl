.comment-list {
  max-width: r(550px)

  &__single {
    background: colors.darkgrey
    color: colors.beige
    margin-bottom: r(20px)

    header {
      overflow: hidden
      position: relative
      background: colors.bluishgrey
      color: colors.white

      img {
        float: left
        max-width: r(50px)
      }
    }

    .author-name {
      display: inline-block
      position: absolute
      top: 50%
      transform: translateY(-50%) translateX(r(10px))
    }

    .comment {
      padding: 1% 2%
    }

    .child-comment-list {
      // padding: 2%
      margin: 2%

      .comment-list__single {
        border-top: r(2px) solid darken(#ccc, 10%)
        padding-top: r(20px)
      }
    }
  }

  .pagination {
    margin-left: 0
    margin-right: 0
    margin-bottom: r(40px)
  }
}
