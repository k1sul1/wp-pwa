.navigation {
  cursor: pointer
  background: #ae1414

  ul {
    list-style: none
    padding: 0
    margin: 0
  }

  li {
    font-size: 1.4rem
    display: block
    padding: 10px 20px
  }

  a {
    color: #f1f1f1
    text-decoration: none
  }


  &__toggle {
    appearance: none
    width: 100%
    height: 80px
    line-height: @height
    padding: 0
    background: transparent
    border: none
    text-transform: uppercase
    font-weight: bold
    color: #f1f1f1
    text-align: right
    padding-right: 20px
    transition: 0.3s ease-out

    &:focus, &:hover {
      outline: 0
      background: #222
      transition: 0.3s ease-in
    }

    &:focus {
      background: darken(#222, 30%) // I know, bad a11y
    }
  }

  &__menu {
    padding: 15px 0
    padding-bottom: 0
    display: flex
    flex-flow: column nowrap
  }

  &.open {
    position: absolute
    width: 100%
    height: 100%
    overflow-y: scroll

    .navigation__toggle {
      background: #222
      transition: 0.3s ease-in
    }
  }
}
