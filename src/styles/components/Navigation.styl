.navigation {
  cursor: pointer
  background: colors.orange

  ul {
    list-style: none
    padding: 0
    margin: 0
  }

  li {
    font-size: 1.4rem
    display: block
    padding: 10px 20px
  }

  a {
    color: colors.white
    text-decoration: none
  }


  &__toggle {
    appearance: none
    width: 100%
    height: 80px
    line-height: @height
    padding: 0
    background: transparent
    border: none
    text-transform: uppercase
    font-weight: bold
    color: colors.white
    text-align: right
    padding-right: 20px
    transition: 0.3s ease-out

    &:focus, &:hover {
      outline: 0
      background: colors.darkgrey
      transition: 0.3s ease-in
    }
  }

  &__menu {
    padding: 15px 0
    padding-bottom: 0
    display: flex
    flex-flow: column nowrap
  }

  &.open {
    position: absolute
    width: 100%
    height: 100%
    overflow-y: scroll
    z-index: 9999

    .navigation__toggle {
      background: colors.darkgrey
      transition: 0.3s ease-in
    }
  }
}
