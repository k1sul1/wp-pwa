.navigation {
  cursor: pointer
  min-height: 80px

  ul {
    list-style: none
    padding: 0
    margin: 0
  }

  li {
    font-size: 1.4rem
    display: block
    padding: 10px 20px
  }

  a {
    color: #f1f1f1
    text-decoration: none
  }

  > ul {
    padding: 15px 0
    padding-bottom: 0
    display: flex
    flex-flow: column nowrap
  }
}
